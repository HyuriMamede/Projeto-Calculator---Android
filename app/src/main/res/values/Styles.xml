<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Contaneir_Button">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">30sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">0.1dp</item>
    </style>
    <style name="Operator_Button" parent="Contaneir_Button">
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:textColor">@color/orange</item>
    </style>
    
    <style name="Operator_Button_Equals" parent="Contaneir_Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/orange</item>
    </style>
    
    <style name="Numbers_Button" parent="Contaneir_Button">
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:textColor">@color/white</item>
    </style>




</resources>